{
    "name": "Pascaline",
    "version": "1.0",
    "manifest_version": 2,
    "description": "a simple calculator for all your need.",
    "content_scripts": [{
        "matches": ["https://*/*"],
        "js": ["popup/math.js"],
        "css": ["popup/style.css"]
    }],
    "icons": {
        "48": "logo.png"
    },
    "permissions": ["activeTab"],
    "browser_action": {
        "default_popup": "popup/index.html",
        "default_title": "calculator",
        "default_icon": "logo.png"
    }
  
}

